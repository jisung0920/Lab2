<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_res"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.park.myapplication.ResActivity">

    <TextView
        android:text="레스토랑을 시작하려면 아래를 누르세요."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <Switch
            android:text="시작함"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            />
        <TextView
            android:visibility="invisible"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약시간 경과시간 : "
            android:textColor="#3226d6"
            android:id="@+id/time"/>

        <Chronometer
            android:visibility="invisible"

            android:textColor="#3226d6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer1"
        />


    </LinearLayout>




    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <DatePicker
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker" />
        <TimePicker
            android:visibility="invisible"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker" />
        <GridLayout
            android:visibility="invisible"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="fill"
            android:rowCount="3"
            android:columnCount="2">

            <TextView
                android:text="성인"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/adult" />

            <TextView
                android:text="청소년"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/teen" />

            <TextView
                android:text="어린이"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/baby" />

        </GridLayout>

        <GridLayout
            android:visibility="invisible"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:rowCount="7"
            android:columnCount="2">


            <TextView
                android:layout_columnSpan="2"
                android:text="예약결과는 다음과 같습니다."
                android:textSize="50dp"
                android:textColor="#3e5ca7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16" />

            <TextView
                android:text="날짜"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15" />

            <TextView
                android:text="0000년00월00일"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datetextView" />

            <TextView
                android:text="시간"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13" />

            <TextView
                android:text="00시00분"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timetextView" />
            <TextView
                android:text="성인"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18" />
            <TextView
                android:text="00명"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adulttextView" />
            <TextView
                android:text="청소년"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView110" />
            <TextView
                android:text="00명"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/teentextView" />
            <TextView
                android:text="어린이"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView112" />
            <TextView
                android:text="00명"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/babytextView" />
            <TextView
                android:text="예약되었습니다."
                android:textColor="#b62121"
                android:textSize="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" />
        </GridLayout>

    </FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"
        android:id="@+id/prev"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:id="@+id/next"
        android:layout_weight="1"/>
</LinearLayout>

</LinearLayout>
